<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.cron" id="cron_attendance_signout">
            <field name="name">Auto Signout Attendance</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="'hr.attendance'" name="model"/>
            <field eval="(DateTime.now() + timedelta(days= +1)).strftime('%Y-%m-%d 02:30:00')"
                   name="nextcall"/>
            <field eval="'_cron_auto_check_out'" name="function"/>
            <field eval="'()'" name="args"/>
        </record>
    </data>
</odoo>
