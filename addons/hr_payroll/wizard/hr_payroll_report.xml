<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="wiz_payroll_report_view_form" model="ir.ui.view">
    <field name="name">Payroll report</field>
    <field name="model">wiz.payroll.report</field>
    <field name="arch" type="xml">
      <form string="Payroll Excel report">
        <group>
              <group>
                  <field name="payslip_run_id" />
              </group>
        </group>
        <footer>
          <button name="xls_export" string="Generate Report" type="object"
                  default_focus="1" class="oe_highlight"/>
          or
          <button string="Cancel" class="oe_link" special="cancel" />
        </footer>
      </form>
    </field>
  </record>

  <record id="wiz_payroll_report_action" model="ir.actions.act_window">
    <field name="name">Payroll Excel Report</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">wiz.payroll.report</field>
    <field name="view_type">form</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="wiz_payroll_report_view_form"/>
    <field name="target">new</field>
  </record>

  <menuitem id="payroll_report_root_menu"
            name="Payroll Excel Report"
            groups="hr_payroll.group_hr_payroll_manager"
            parent="hr_payroll.menu_hr_payroll_root"
            sequence="90"/>
  <menuitem id="payroll_report_menu"
            name="Payroll Excel Report"
            groups="hr_payroll.group_hr_payroll_manager"
            parent="hr_payroll.payroll_report_root_menu"
            action="wiz_payroll_report_action"
            sequence="1"/>


</odoo>
